/* pages/home/home.wxss */
.header {
  width: calc(100% - 40px);
  height: 130px;
  position: fixed;
  padding: 0 20px; 
  top: 0;
  z-index: 2;
  background-color: white;
}

.topBar {
  width: 100%;
  float: left;
  margin-top: 10px;
}

.createButton {
  background-color: #71c27f;
  border-radius: 10px;
  width: 50px;
  height: 50px;
  float: left;
  text-align: center;
  line-height: 46px;
  font-size: 36px;
  color: white;
}

.cancelButton {
  background-color: #000;
  border-radius: 10px;
  width: 50px;
  height: 50px;
  float: left;
  text-align: center;
  line-height: 50px;
  font-size: 14px;
  color: white;
}

.search {
  width: calc(100% - 60px);
  height: 50px;
  float: right;
  background-color: #f1f1f1;
  border-radius: 10px;
}

.search input {
  height: 100%;
  line-height: 50px;
  font-size: 18px;
  width: 100%;
  text-align: center;
  font-weight: 200;
}

.header text {
  height: 70px;
  line-height: 70px;
}

.header .left {
  color: #66708c;
  font-weight: bold;
  margin-left: 5px;
}

.header .right {
  color: rgba(0, 0, 0, 0.2);
  font-size: 14px;
  margin-right: 10px;
  float: right;
}

/*—————— Scroll View ——————*/

.bookList {
  width: 100%;
  height: 100%;
  float: left;
}

.headerView {
  height: 130px;
  width: 100%;
  float: left;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.bookList  .bookID {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.75);
  font-size: 14px;
  font-style: italic;
  text-align: center;
  border-radius: 100px;
  padding: 3px 15px;
  margin: 10px 0 0 10px;
}

.bookList .child {
  background-color: #f1f1f1;
  width: calc((100% - 55px) / 2);
  height: 66vw;
  float: left;
  margin: 0 -5px 40px 20px;
  color: white;
}

.child image {
  width: 100%;
  height: 100%;
  float: left;
  margin: 0;
}

.child text {
  color: #66708c;
  font-size: 14px;
  height: 40px;
  line-height: 40px;
  overflow-y: hidden;
  float: left;
}