/* pages/detail/detail.wxss */

.cover {
  width: 100%;
  height: 150vw;
  margin-bottom: 30px;
  position: fixed;
  top: 0;
}

.cover image {
  width: 100%;
  height: 100%;
}

.scrollView {
  position: absolute;
  z-index: 2;
}

.content {
  margin-top: 52vh;
  width: calc(100% - 40px);
  float: left;
  padding: 20px;
  background-color: white;
  padding-bottom: 100px;
}

.content text {
  font-size: 18px;
  color: #66708c;
  font-weight: bold;
  width: 100%;
  float: left;
}

.content .border {
  width: 100%;
  height: 1px;
  background-color: #f1f1f1;
  margin: 10px 0;
  float: left;
}

.content .tag {
  background-color: #f1f1f1;
  color: black;
  border-radius: 100px;
  padding: 5px 15px;
  margin: 10px 10px 10px 0;
  float: left;
  font-size: 16px;
  font-weight: bold;
}

.modify {
  width: 100px;
  height: 36px;
  background-color: #71c27f;
  border-radius: 100px;
  position: absolute;
  top: 20px;
  left: 20px;
  color: white;
  line-height: 36px;
  font-weight: 300;
  font-size: 14px;
  z-index: 11;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15)
}

.position {
  float: left;
  width: 120px;
  background-color: #eee;
  margin: 5px 10px 15px 0;
  border-radius: 8px;
  overflow: hidden;
}

.position text {
  float: left;
  color: #333;
  padding: 5px 0px;
  text-align: center;
}

.position .intro {
  background-color: #71c27f;
  color: #fff;
  font-size: 14px;
}