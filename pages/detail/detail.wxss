/* pages/detail/detail.wxss */

.cover {
  width: 100%;
  height: 50vh;
  margin-bottom: 30px;
}

.cover image {
  width: 100%;
  height: 100%;
}

.content {
  width: calc(100% - 40px);
  padding: 20px;
}

.content text {
  font-size: 18px;
  color: #66708c;
  font-weight: bold;
  width: 100%;
  float: left;
}

.content .border {
  width: 100%;
  height: 1px;
  background-color: #f1f1f1;
  margin: 10px 0;
  float: left;
}

.content label {
  width: 100%;
  height: 50px;
  font-weight: bold;
  float: left;
  margin-top: 20px;
}

.content .tag {
  background-color: #f1f1f1;
  color: black;
  border-radius: 100px;
  padding: 5px 15px;
  margin: 10px 10px 10px 0;
  float: left;
  font-size: 16px;
  font-weight: bold;
}