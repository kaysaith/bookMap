/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

swiper {
  width: 100%;
  height: 75vh;
}

swiper image {
  width: 100%;
  height: 100%;
  float: left;
}

.start {
  font-size: 16px;
  font-weight: bold;
  width: 80%;
  height: 50px;
  border-radius: 100px;
  background-color: black;
  line-height: 50px;
  color: white;
  position: absolute;
  bottom: calc((25vh - 50px) / 2);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}