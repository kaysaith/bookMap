/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

swiper {
  width: 100%;
  height: 70vh;
}

swiper image {
  width: 100%;
  height: 100%;
  float: left;
}

.button {
  font-size: 16px;
  font-weight: bold;
  width: 80%;
  height: 50px;
  margin-left: 10%;
  border-radius: 100px;
  background-color: black;
  line-height: 50px;
  color: white;
  position: absolute;
  bottom: calc((30vh - 100px - 3vw) / 2);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

.button.firend {
  background-color: #71c27f;
  bottom: calc((30vh - 100px - 3.5vw) / 2 + 50px + 3.5vw);
}