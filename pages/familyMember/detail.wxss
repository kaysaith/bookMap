/* pages/familyMember/detail.wxss */

.memberList {
  width: 100%;
  height: 100vh;
}

.member {
  width: calc(100% - 40px);
  height: 50px;
  line-height: 50px;
  font-size: 16px;
  color: black;
  margin: 0 20px;
  font-weight: 400;
  border-bottom: 0.5px solid #f1f1f1;
}

.member button {
  float: right;
  font-size: 12px;
  color: #ccc;
  margin-top: 12px;
  height: 26px;
  line-height: 26px;
}

.addMemberButton {
  position: fixed;
  bottom: 50px;
  background-color: #71c27f;
  border-radius: 100px;
  font-size: 16px;
  color: white;
  font-weight: bold;
  width: 80%;
  height: 50px;
  margin-left: 10%;
  line-height: 50px;
}

.mask {
  background-color: rgba(0, 0, 0, 0.6);
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
}

.inputOverlayView {
  width: 90%;
  height: 280px;
  background-color: white;
  border-radius: 10px;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  position: fixed;
  top: calc((100vh - 300px) / 2 - 60px);
  left: 5%;
}

.inputOverlayView text {
  color: black;
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  float: left;
  margin: 20px 0 10px 0; 
  font-size: 24px;
  font-weight: bold;
}

.inputOverlayView input {
  background-color: white;
  border-radius: 10px;
  line-height: 50px;
  height: 50px;
  width: calc(100% - 60px);
  margin: 0 0 30px 20px;
  padding-left: 20px;
  border: 1px solid #eee;
}

.inputOverlayView .button {
  width: calc(100% - 40px);
  height: 40px;
  margin: 10px 0 0 20px;
  line-height: 40px;
  font-weight: bold;
  font-size: 16px;
}

.confirmButton {
  color: white;
  background-color: #71c27f;
}

.cancelButton {
  color: white;
  background-color: black;
}